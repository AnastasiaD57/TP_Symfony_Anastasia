{% extends 'bootstrap.html.twig' %}

{% block body %}


<div class="container text-center">

  <h1 class="display-4 py-3">Bienvenue chez notre concessionnaire!</h1>

  <section class="carousel slide" id="diapo" data-bs-ride="carousel">
    <div class="carousel-indicators">
      {% for key, value in vehicules %}
        <button type="button" data-bs-target="#diapo" data-bs-slide-to="{{key}}" class=" {{ key is same as(0) ? "active" : "" }} " aria-current=" {{ key is same as(0) ? "true" : "" }} "></button>
      {% endfor %}
    </div>
            
    <div class="carousel-inner rounded">
      {% for key, value in vehicules %}
        <div class="carousel-item {{ key is same as(0) ? "active" : "" }} ">
            <img src="{{ value.image }}" alt=" Image {{ value.modele }} " class="d-block w-100" style="height:400px; object-fit:cover">
        </div>
      {% endfor %}                 
    </div>

    <button class="carousel-control-prev" type="button" data-bs-target="#diapo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#diapo" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
  </section>


  <h1 class="display-2 py-3">Disponibles à la vente:</h1>


  <div class="row justify-content-evenly">
    {% for key, value in vehicules %}
      {% if value.isEnVente %}            
        <div class="col-3">
          <div class="card mb-3">
            <h5 class="card-header"> {{ value.nom }} </h5>
            <img src=" {{ value.image }}" class="card-img-top" alt="Image {{ value.modele }}" style="height:150px; object-fit:cover">
            <div class="card-body d-flex flex-column align-items-center" style="min-height: 300px">
              <h5 class="card-title">{{ value.modele }}</h5>
              <p class="card-text">{{ value.description }}</p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
              <p class="mb-0">Prix : {{ value.prix }}</p>
              <a href="javascript:void(0);" onclick="window.open('{{ value.lienredirection }}', '_blank');" class="btn btn-outline-dark">En savoir plus</a>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <p class="fst-italic pt-3">Les images et informations présentés sur ce site appartiennent à leurs propriétaires respectifs</p>
</div>

{% endblock %}